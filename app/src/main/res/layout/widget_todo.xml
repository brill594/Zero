<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="18dp"
    android:paddingBottom="18dp"
    android:background="@drawable/widget_card_bg"
    android:clipToPadding="true"
    android:clipChildren="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/widget_content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- Header: title + date -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:id="@+id/widget_header"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="28dp"
            android:paddingLeft="28dp">

            <TextView
                android:id="@+id/widget_header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zero Arrangements"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/zero_widget_text" />

            <TextView
                android:id="@+id/widget_header_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/widget_text_grey"
                android:text="" />
        </LinearLayout>

        <ImageView
            android:id="@+id/widget_header_arrow"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:src="@android:drawable/ic_media_next"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/widget_header_refresh"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_toLeftOf="@id/widget_header_arrow"
            android:layout_marginEnd="8dp"
            android:src="@android:drawable/ic_popup_sync"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/widget_header_reset"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_toLeftOf="@id/widget_header_refresh"
            android:layout_marginEnd="8dp"
            android:src="@android:drawable/ic_menu_revert"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>

    <ListView
        android:id="@+id/widget_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"
        android:listSelector="@android:color/transparent"
        android:drawSelectorOnTop="false"
        android:transcriptMode="disabled" />

    <TextView
        android:id="@+id/widget_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/zero_widget_text"
        android:textSize="11sp"
        android:text="(暂无待办)"
        android:layout_marginTop="8dp" />

    </LinearLayout>

</LinearLayout>