<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_container"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_item_bg_dark"
    android:padding="10dp"
    android:minHeight="50dp"
    android:gravity="center_vertical">

    <!-- Left colored bar -->
    <ImageView
        android:id="@+id/item_bar"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/bar_purple" />

    <!-- Center text -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/zero_widget_text"
            android:textSize="13sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/item_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/widget_text_grey"
            android:textSize="11sp"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- Right times column -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end">

        <TextView
            android:id="@+id/item_time_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/widget_text_grey"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/item_time_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/widget_text_grey"
            android:textSize="11sp" />
    </LinearLayout>

</LinearLayout>